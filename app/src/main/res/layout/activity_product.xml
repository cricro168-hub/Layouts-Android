<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="16dp">

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Smartphone Galaxy"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="$599.990"
            android:textColor="#2E7D32"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/productDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/productPrice"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:text="Smartphone de última generación con cámara de 108MP, batería de larga duración y procesador de alto rendimiento."
            android:textSize="14sp" />

        <TextView
            android:id="@+id/productStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productDescription"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Stock: 15 unidades"
            android:textColor="#757575"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="161dp"
            android:layout_height="82dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="123dp"
            android:layout_marginTop="390dp"
            android:layout_marginEnd="111dp"
            android:layout_marginBottom="243dp"
            android:text="contacto del desarrollado" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>